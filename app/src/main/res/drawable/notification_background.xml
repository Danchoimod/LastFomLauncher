<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Rounded corners như Minecraft achievement -->
    <corners android:radius="8dp" />

    <!-- Background màu đen trong suốt -->
    <solid android:color="#DD000000" />

    <!-- Border màu vàng như achievement -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>

