<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.levimc.launcher.ui.fragment.javaInstalltion"
    android:orientation="vertical"
    android:background="#171615">
<!--    đây là thanh điều hướng-->
<LinearLayout
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="SEARCH"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:background="@drawable/searchbackground"
        android:layout_width="200dp"
        android:textSize="12dp"
        android:padding="5dp"
        android:textColorHint="@color/gray"
        android:hint="Installation Name"
        android:layout_height="wrap_content">
    </EditText>
</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="VERSIONS"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/custom_checkbox_square"
                android:button="@null"></CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Release"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>

            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/custom_checkbox_square"
                android:button="@null"></CheckBox>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modded"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>

            <CheckBox
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/custom_checkbox_square"
                android:button="@null"></CheckBox>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beta"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#2F2E2D"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Installations"
            android:background="@drawable/installation_boder"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5sp"
            ></TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import APK"
            android:background="@drawable/installation_boder"
            android:textColor="@color/white"
            android:id="@+id/importApk"
            android:textSize="12sp"
            android:padding="5sp"
            ></TextView>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#2F2E2D"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>