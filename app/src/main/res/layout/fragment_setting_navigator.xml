<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BedrockContainer">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/launcherlayoutImageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262423"
        android:paddingLeft="8sp"
        android:paddingTop="10sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/white"
                ></TextView>
        </LinearLayout>

        <!-- =====================đây là thanh công cụ========================-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--                    đây là các nút -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:id="@+id/btnGeneralSettings"
                    android:textColor="@color/white"
                    >
                </TextView>
                <View
                    android:layout_width="25sp"
                    android:layout_height="3dp"
                    android:id="@+id/green0"
                    android:background="@color/mc_green"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_height="wrap_content"
                    android:text="Accounts"
                    android:id="@+id/btnAccounts"
                    android:textColor="@color/white"
                    >
                </TextView>
                <View
                    android:layout_width="25sp"
                    android:layout_height="3dp"
                    android:id="@+id/green1"
                    android:background="@color/mc_green"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:id="@+id/btnAbout"
                    android:textColor="@color/white"
                    >
                </TextView>
                <View
                    android:layout_width="25sp"
                    android:layout_height="3dp"
                    android:id="@+id/green2"
                    android:background="@color/mc_green"></View>
            </LinearLayout>

        </LinearLayout>
        <!-- =====================đây là thanh công cụ========================-->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingContainer"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>