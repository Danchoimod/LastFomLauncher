<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="0dp" app:cardElevation="2dp"
    app:cardBackgroundColor="#2A2A2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:contentDescription="cover"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:text="World Flat House Map"/>

            <LinearLayout
                android:id="@+id/tagsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txtTypeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B0E0FF"
                    android:textSize="12sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/spinner_item_bg"
                    tools:text="Maps"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/spinner_item_bg"
                    tools:text="10 LFC"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="#DDDDDD"
                android:textSize="13sp"
                tools:text="Immersive cooking and planting ..."/>

            <TextView
                android:id="@+id/txtMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                tools:text="Author: MinhthongVNMC   Created: 2025-10-11"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>